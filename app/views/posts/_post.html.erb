        <%=link_to (image_tag post.postcover.url(:thumb), :class => "img-responsive centered box-hover preachedge-img"), post %>
       


          <% end %> 

          <%if post.audiotitle %>

<%= link_to image_tag("play.png", :class => "prch-overlay"), post %>

<% end %>



                    <div class="col-md-5">

                    <div class="paneloveride" style="height:100%" >
                      <!-- illustration of product img -->
                      
                      <div class="text-center" style="padding:0px;line-height:20px;font-size:14px">

        <div class="preach-img pushnav2 zindez222">
        <% if @post.postcover? %>
        <%= image_tag(@post.postcover.url(:large), :class => "img-responsive centered box-hover preachedge-img") %>
          <% end %> 
        </div>


        <div class="preach-content">
             <%= @post.content %>
         </div>


         <% if @post.user.userphoto? %>

          <%#link_to (image_tag @post.user.profilephoto.url(:large), :class => "kit-avatar kit-avatar-96 border-white pull-left"), users_path(@user) %>
        <%= link_to (image_tag(@post.user.userphoto.url(:small), :class => "kit-avatar kit-avatar-96 border-white pull-left padding10")), user_path(@post.user_id) %>
        <% else %> 
        <%= link_to (image_tag("noimage.jpg", :class => "kit-avatar kit-avatar-96 border-white pull-left pullup padding10")), user_path(@post.user_id) %>


       <% end %> 





       <!--end-->
<div id="post_<%= @post.id %>_likes">
       <%= render partial: "likes", locals: {post: @post} %>
</div>
       



</div>
</div>

<div class="panel" style="z-index: 999 important!">


         <small>

       <strong class="closeleft"><i class="fa fa-upload "></i><%= " " %><%= @post.user.firstname.split(" ").map(&:capitalize).join(" ") if @post.user.firstname %><%= " " %><%= @post.user.lastname.split(" ").map(&:capitalize).join(" ") if @post.user.lastname %></strong>

       </small>



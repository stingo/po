                            <li>
                            
                            
      <% if @post.user == current_user -%>
  
    <%= link_to 'Edit this post', edit_post_path(@post), class: "btn btn-clean padding10" %>
    </li>
   
    <% end %> 

     <li>
     <% if @post.user == current_user -%>

     


    <%= link_to 'Delete this post', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-clean padding10" %>

  <% end %>   

                           
                             </li>


